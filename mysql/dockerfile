FROM mysql:5.7

LABEL  mantainer="Jounet" \
			descripton="sql" \
			version="1.0"

# Add a database
ENV MYSQL_DATABASE Inventary

# 
RUN set -eux; \
			  apt-get update; \
			  apt-get install -y git;

# Copy Scripts SQL to Docker
# ADD https://github.com/moby/buildkit/blob/master/frontend/dockerfile/docs/experimental.md /docker-entrypoint-initdb.d/
RUN git clone https://github.com/iJou/actv3.git /myconfsql/
RUN cp -R /myconfsql/mysql/sqlscript/* /docker-entrypoint-initdb.d/